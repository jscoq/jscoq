(env
 (dev     (flags :standard -rectypes))
 (release (flags :standard -rectypes -w +27+32)))

(rule
 (targets coq-pkgs)
 ; (mode promote)  - blocked by https://github.com/ocaml/dune/issues/2070
 (deps
  (package coq-core)
  (package coq-stdlib))
 (action
  (progn
   (run node %{dep:dist}/cli.js %{dep:coq-jslib/metadata/coq-pkgs.json}
             --rootdir %{env:COQBUILDDIR_REL=????} --nostdlib))))

(rule
 (targets node_modules)
 (deps
   package.json
   package-lock.json)
 (action (run npm install)))

(alias
 (name jscoq)
 (deps
   (source_tree ui-js)
   (source_tree ui-css)
   (source_tree ui-images)
   (source_tree ui-external)
   (source_tree examples)
   index.html
   coq-pkgs
   node_modules
   coq-js/jscoq_worker.js
   dist
   jscoq.install))

; JavaScript build (Webpack)
; cli.js, ide-project.browser.js, collab.browser.js
(rule
 (target dist)
 (deps
  (source_tree coq-jslib)
  (source_tree ui-js)
  webpack.config.js
  tsconfig.json
  node_modules)
 (action
  (run npm run build)))

; Just the worker
(alias
  (name jscoq_worker)
  (deps
    coq-js/jscoq_worker.js))

(dirs (:standard _vendor+* \ dist node_modules examples))
